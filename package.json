{
  "name": "whichclaw",
  "version": "1.0.0",
  "description": "AI Model & Skill Management Desktop Application",
  "author": "WhichClaw Team",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "npm run copy:config && npm run build:tools && npm run build:main && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run copy:config && npm run build:tools && npm run build:main && vite build && electron-builder",
    "typecheck": "tsc --noEmit",
    "build:tools": "node scripts/build-tools.mjs",
    "build:main": "node scripts/build-main.mjs",
    "copy:config": "node scripts/copy-config.mjs",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "systeminformation": "^5.30.7"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "glob": "^13.0.3",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.38",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.21.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.1",
    "vite-plugin-electron": "^0.28.7",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.whichclaw.app",
    "productName": "WhichClaw",
    "copyright": "Copyright Â© 2026 WhichClaw",
    "afterPack": "./scripts/afterPack.cjs",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/node_modules/sharp/**/*",
      "!**/node_modules/png-to-ico/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/local",
        "to": "local",
        "filter": [
          "**/*",
          "!modelSettings.json",
          "!models/**",
          "!bin/**"
        ]
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "https://whichclaw.com/update/"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "WhichClaw"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Development"
    }
  }
}