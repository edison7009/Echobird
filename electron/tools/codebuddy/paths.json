{
    "name": "CodeBuddy",
    "category": "IDE",
    "apiProtocol": [
        "openai"
    ],
    "docs": "https://www.codebuddy.ai/docs/ide/Features/models",
    "command": "codebuddy",
    "configDir": "~/.codebuddy",
    "configFile": "~/.codebuddy/models.json",
    "requireConfigFile": false,
    "detectByConfigDir": true,
    "paths": {
        "win32": [
            "%LOCALAPPDATA%/Programs/CodeBuddy/CodeBuddy.exe"
        ],
        "darwin": [
            "/Applications/CodeBuddy.app/Contents/MacOS/CodeBuddy"
        ],
        "linux": [
            "/usr/local/bin/codebuddy",
            "/usr/bin/codebuddy"
        ]
    }
}