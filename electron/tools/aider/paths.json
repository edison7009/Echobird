{
    "name": "Aider",
    "category": "CLI",
    "apiProtocol": [
        "openai",
        "anthropic"
    ],
    "docs": "https://aider.chat/docs/",
    "installUrl": "https://aider.chat/docs/install.html",
    "command": "aider",
    "configDir": "~",
    "configFile": "~/.aider.conf.yml",
    "requireConfigFile": false,
    "paths": {
        "win32": [
            "%USERPROFILE%/AppData/Local/Programs/Python/Python*/Scripts/aider.exe",
            "%APPDATA%/Python/Scripts/aider.exe"
        ],
        "darwin": [
            "/usr/local/bin/aider",
            "/opt/homebrew/bin/aider"
        ],
        "linux": [
            "/usr/local/bin/aider",
            "/usr/bin/aider",
            "~/.local/bin/aider"
        ]
    }
}